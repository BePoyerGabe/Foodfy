{% extends 'layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="/detail.css">
    <title>Detalhes receita</title>
{% endblock head %}

{% block content %}
    <div class="wrapper">
        <article id="main">
            <section id="present">
                <img src="{{infosRecipe.image}}" alt="Imagem de {{infosRecipe.title}}">

                <h1>{{infosRecipe.title}}</h1>
                <p>por
                    {{infosRecipe.author}}</p>

            </section>

            <section class="ingredients">
                <h2>Ingredientes</h2>
                <button class="showHide">Mostrar</button>

                <ul>
                    {% for ingredient in infosRecipe.ingredients %}
                        <li>{{ingredient}};</li>
                    {% endfor %}
                </ul>
            </section>

            <section class="howToDo">
                <h2>Modo de preparo</h2>
                <button class="showHide">Mostrar</button>

                <p>{{infosRecipe.preparation}}</p>
            </section>

            <section class="information">
                <h2>Informações adicionais</h2>
                <button class="showHide">Mostrar</button>

                <p>{{infosRecipe.information}}</p>
            </section>

        </article>
    </div>
{% endblock content %}