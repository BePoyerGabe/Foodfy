{% macro createCard(card, haveBtn) %}
    <div class="card">
        {% if haveBtn %}
            <div style="background: url({{ card.image }}) no-repeat center center/cover;"></div>
        {% else %}
            <img src="{{ card.image }}" alt="{{ card.title }}"/>
        {% endif %}
        <div class="card-info">
            <p>{{card.title}}</p>
            <span>por
                {{card.author}}</span>
            {% if haveBtn %}
                <a href="/admin/recipes/{{ card.index }}">Visualizar</a>
            {% endif %}
        </div>
    </div>

{% endmacro %}